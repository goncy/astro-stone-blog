---
import { type CollectionEntry, getCollection } from 'astro:content';

import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();
---
<Layout>
	<div class="flex flex-col items-start gap-8 sm:gap-10">
		<a href="/blog" class="text-primary-950/70 dark:text-primary-200/70">
			‚Üê Back to blog
		</a>
		<div class="flex flex-col items-start gap-4 sm:gap-6">
			<h1 class="text-4xl font-medium tracking-tight sm:text-5xl lg:text-6xl">
				{post.data.title}
			</h1>
			<p class="text-primary-950/70 dark:text-primary-200/70 text-lg sm:text-xl">
				{post.data.description}
			</p>
		</div>
		{post.data.heroImage && (
			<img
				transition:name={post.data.heroImage}
				class="h-auto w-full rounded-3xl"
				width="1280"
				height="640"
				src={post.data.heroImage}
				alt="Hero picture"
			/>
		)}
	</div>
	<article>
		<Content />
	</article>
</Layout>	
